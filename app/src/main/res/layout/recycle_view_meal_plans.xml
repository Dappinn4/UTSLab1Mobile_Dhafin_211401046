<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView_mealPlans"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/greeksalad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_mealPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Greek salad with lettuce, green onion,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_mealPlans" />

    <TextView
        android:id="@+id/textviewkcal_mealPlans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="150 kcal"
        android:textColor="#303841"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_mealPlans" />


    <View
        android:id="@+id/linebetweenmealplans"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#26696969"
        app:layout_constraintTop_toBottomOf="@id/textviewkcal_mealPlans" />


</androidx.constraintlayout.widget.ConstraintLayout>