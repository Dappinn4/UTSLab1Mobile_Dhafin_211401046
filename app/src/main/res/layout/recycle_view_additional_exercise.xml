<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cardView_additional"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/jumping_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>
    <ImageView
        android:id="@+id/imageView_additional"
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:elevation="2dp"
        android:src="@drawable/jumping_rope"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/cardView_additional"
        app:layout_constraintStart_toStartOf="@id/cardView_additional"

         />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@id/cardView_additional"
        app:layout_constraintTop_toTopOf="@id/cardView_additional">

        <TextView
            android:id="@+id/textviewsName_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Exercises with Jumping  Rope"
            android:textColor="#191919"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/texview_calories_additional"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/calories"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textviewsName_additional" />

        <TextView
            android:id="@+id/textview110kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:text="110 kcal"
            android:textColor="#303841"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@id/texview_calories_additional"
            app:layout_constraintStart_toEndOf="@id/texview_calories_additional"
            app:layout_constraintTop_toTopOf="@id/texview_calories_additional" />

        <ImageView
            android:id="@+id/lineinadditional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/linebeginner"
            app:layout_constraintBottom_toBottomOf="@id/textview110kcal"
            app:layout_constraintStart_toEndOf="@id/textview110kcal"
            app:layout_constraintTop_toTopOf="@id/textview110kcal" />

        <ImageView
            android:id="@+id/clock3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/clock"
            app:layout_constraintBottom_toBottomOf="@id/texview_calories_additional"
            app:layout_constraintStart_toEndOf="@id/lineinadditional"
            app:layout_constraintTop_toTopOf="@id/texview_calories_additional" />

        <TextView
            android:id="@+id/textviewMin_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:text="10 min"
            android:textColor="#303841"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@id/texview_calories_additional"
            app:layout_constraintStart_toEndOf="@id/clock3"
            app:layout_constraintTop_toTopOf="@id/texview_calories_additional" />

        <TextView
            android:id="@+id/textviewbeginner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/montserrat"
            android:text="Beginner"
            android:textColor="#303841"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/texview_calories_additional" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/linebetweenadditional"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:background="#26696969"
        app:layout_constraintTop_toBottomOf="@id/imageView_additional" />


</androidx.constraintlayout.widget.ConstraintLayout>